generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model teams {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  stadium     String?
  city        String?
  image       String?
  seriesId    Int?
  series      series?     @relation(fields: [seriesId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  players     players[]
}

model series {
  id              Int       @id @default(autoincrement())
  name            String
  description     String?
  launchDate      DateTime?
  status          String?
  season          String?
  country         String?
  image           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  teams           teams[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model players {
  id                  Int       @id @default(autoincrement())
  name                String
  jerseyNumber        String
  position            String
  birthDate           DateTime?
  nationality         String?
  description         String?
  height              Float?
  weight              Float?
  secondaryPosition1  String?
  secondaryPosition2  String?
  rarity              String?
  image               String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  teamId              Int?
  team                teams?    @relation(fields: [teamId], references: [id])
}